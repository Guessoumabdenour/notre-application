<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".HomeRep">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/quick"
        android:text="Repair Man "
        android:textColor="#D32F2F"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_bug_fixing" />

    <Button
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button1"
        android:drawableLeft="@drawable/ic_baseline_mail_24"
        android:fontFamily="@font/quick"
        android:inputType="textCapCharacters"
        android:padding="15dp"
        android:text="abdouGA23@gmail.com"
        android:textColor="#212121"
        android:textSize="22dp"></Button>

    <Button
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button1"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:fontFamily="@font/quick"
        android:inputType="textCapCharacters"
        android:padding="15dp"
        android:text="ID"
        android:textColor="#212121"
        android:textSize="20dp"></Button>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/quick"

        android:inputType="textCapCharacters"
        android:onClick="Orders"
        android:text="Messages received"
        android:textColor="#FFF"></Button>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/quick"

        android:inputType="textCapCharacters"
        android:onClick="Posts"
        android:text="Make a post"
        android:textColor="#FFF" />


    <Button
        android:id="@+id/out"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/quick"
        android:inputType="textCapCharacters"
        android:text="Sign out"
        android:textColor="#D32F2F"></Button>


</LinearLayout>